{
  "name": "a24z-memory",
  "version": "0.5.31",
  "private": false,
  "description": "Standalone a24z Memory MCP server",
  "main": "dist/lib.js",
  "types": "dist/lib.d.ts",
  "bin": {
    "a24z-memory": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "build": "npm run clean && npm run build:lib && npm run fix:imports && npm run build:cli",
    "clean": "rm -rf dist",
    "build:lib": "tsc",
    "fix:imports": "node build/fix-esm-imports.js",
    "build:cli": "node build/build-cli.js",
    "prepare": "husky",
    "release": "semantic-release",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts,.js --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test:mcp": "./tests/test-mcp-build.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/a24z-ai/a24z-memory.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "a24z",
    "memory"
  ],
  "author": "a24z Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/a24z-ai/a24z-memory/issues"
  },
  "homepage": "https://a24z.ai",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "globby": "^14.1.0",
    "gpt-tokenizer": "^3.0.1",
    "ignore": "^7.0.5",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@jest/globals": "^29.7.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.15.26",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "fast-glob": "^3.3.3",
    "husky": "^9.1.7",
    "jest": "^29.5.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "ts-jest": "^29.1.0",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "tests/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "USAGE_GUIDE.md",
    "LIBRARY_USAGE.md",
    "LICENSE"
  ]
}
